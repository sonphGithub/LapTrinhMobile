<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.food01android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="Android.permission.ACCESS_NETWORK_STATE" />

    <!--    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" />-->

    <application

        android:allowBackup="true"
        android:icon="@drawable/ic_find_recipes"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_find_recipes"
        android:supportsRtl="true"
        android:theme="@style/Theme.Food01Android"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.LogIn.VegetarianActivity" />
        <activity android:name=".activity.LogIn.LogInActivity" />
        <activity
            android:name=".activity.LogIn.SplashActivity"
            android:exported="true"
            android:label="Healthy Food">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
    </application>

</manifest>